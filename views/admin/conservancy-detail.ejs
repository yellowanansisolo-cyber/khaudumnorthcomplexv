<%- include('partials/header') %>

<section class="page-hero" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= conservancy.heroImage || '/images/default-hero.jpg' %>');">
    <h1><%= conservancy.name %></h1>
</section>

<section class="container content-section">
    <div class="row">
        <div class="col-lg-8">
            <h2>About the Conservancy</h2>
            <p class="lead"><%- conservancy.mainContent %></p>
        </div>
        <div class="col-lg-4">
            <div class="sidebar-info">
                <strong>Our Vision:</strong>
                <p><%= conservancy.vision %></p>
            </div>
            <div class="sidebar-info">
                <strong>Our Mission:</strong>
                <p><%= conservancy.mission %></p>
            </div>
        </div>
    </div>
</section>

<section class="container content-section">
    <h2 class="section-title">Key Achievements</h2>
    <ul class="list-group list-group-flush">
        <% if (conservancy.achievements && conservancy.achievements.length > 0) { %>
            <% conservancy.achievements.forEach(ach => { %>
                <li class="list-group-item"><i class="fas fa-check-circle text-primary me-2"></i><%= ach %></li>
            <% }) %>
        <% } else { %>
            <p class="text-center">Information on achievements is being updated.</p>
        <% } %>
    </ul>
</section>

<% if (conservancy.gallery && conservancy.gallery.length > 0) { %>
<section class="container content-section">
    <h2 class="section-title">Gallery</h2>
    <div class="gallery-grid">
        <% conservancy.gallery.forEach(img => { %>
            <a href="<%= img.url %>" class="gallery-item">
                <img src="<%= img.url %>" alt="Gallery image for <%= conservancy.name %>">
            </a>
        <% }) %>
    </div>
</section>
<% } %>

<%- include('partials/footer') %>